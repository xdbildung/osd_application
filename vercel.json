{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/download-template",
      "destination": "/api/index.js"
    },
    {
      "source": "/admin",
      "destination": "/api/index.js"
    },
    {
      "source": "/setup",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!styles\\.css|script\\.js|.*\\.png|.*\\.pdf|.*\\.jpg|.*\\.jpeg|.*\\.docx|.*\\.ico|favicon\\.ico).*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  }
} 